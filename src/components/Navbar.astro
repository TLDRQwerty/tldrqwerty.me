---
import { Icon } from "astro-icon";
---

<nav class="flex flex-row justify-between p-2 lg:sticky top-0 bg-black z-10">
  <div class="flex flex-row space-x-4">
    <a
      class="transition-colors duration-600 flex flex-row items-center space-x-2 group hover:text-primary-400"
      href="/"
    >
      <Icon name="home" pack="tabler" size="24" />
    </a>
  </div>
  <div class="flex flex-row space-x-4">
    <a
      class="transition-colors duration-600 flex flex-row items-center space-x-2 group hover:text-primary-400"
      href="/music/top/tracks"
    >
      <Icon name="music" pack="tabler" size="24" />
      <span class="hidden md:block group-hover:underline">Music</span>
    </a>
    <a
      class="transition-colors duration-600 flex flex-row items-center space-x-2 group hover:text-primary-400"
      href="/games"
    >
      <Icon name="device-gamepad" pack="tabler" size="24" />
      <span class="hidden md:block group-hover:underline">Games</span>
    </a>
    <a
      class="transition-colors duration-600 flex flex-row items-center space-x-2 group hover:text-primary-400"
      href="https://github.com/tldrqwerty"
    >
      <Icon name="brand-github" pack="tabler" size="24" />
      <span class="hidden md:block group-hover:underline">Github</span>
    </a>
    <a
      class="transition-colors duration-600 flex flex-row items-center space-x-2 group hover:text-primary-400"
      rel="me"
      href="https://social.lol/@tldrqwerty"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-brand-mastodon"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path
          d="M18.648 15.254c-1.816 1.763 -6.648 1.626 -6.648 1.626a18.262 18.262 0 0 1 -3.288 -.256c1.127 1.985 4.12 2.81 8.982 2.475c-1.945 2.013 -13.598 5.257 -13.668 -7.636l-.026 -1.154c0 -3.036 .023 -4.115 1.352 -5.633c1.671 -1.91 6.648 -1.666 6.648 -1.666s4.977 -.243 6.648 1.667c1.329 1.518 1.352 2.597 1.352 5.633s-.456 4.074 -1.352 4.944z"
        ></path>
        <path
          d="M12 11.204v-2.926c0 -1.258 -.895 -2.278 -2 -2.278s-2 1.02 -2 2.278v4.722m4 -4.722c0 -1.258 .895 -2.278 2 -2.278s2 1.02 2 2.278v4.722"
        ></path>
      </svg>
      <span class="hidden md:block group-hover:underline">Mastodon</span>
    </a>
  </div>
</nav>
